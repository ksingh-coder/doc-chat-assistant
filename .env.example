# RAG Document Assistant - Environment Configuration
# Copy this file to .env and fill in your values

# Groq API Configuration
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=openai/gpt-oss-120b

# Application Settings
APP_NAME=RAG Document Assistant
APP_VERSION=1.0.0
DEBUG=false

# Embedding Model
EMBEDDING_MODEL_NAME=BAAI/bge-large-en-v1.5
# EMBEDDING_DEVICE=auto  # auto-detects GPU/CPU, or set to 'cpu' or 'cuda'

# FAISS Settings
VECTORSTORE_INDEX_NAME=faiss_index
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# RAG Settings
RETRIEVAL_K=4
# TEMPERATURE=0.7  # Optional: defaults to 0.7
# MAX_TOKENS=1024  # Optional: defaults to 1024
